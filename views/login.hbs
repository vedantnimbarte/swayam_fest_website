<link rel="stylesheet" type="text/css" href="https://www.bdce.edu.in/Content/SBcss/sb-admin-2.css" />
<div>
    <div class="container mt-4">
        <div class="card o-hidden border-0 shadow-lg">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-7 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-5">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Login</h1>
                            </div>
                            {{#if error}}
                            <p style="color: red; text-align: center">{{error}}</p>
                            {{/if}}
                            <form id="frmLoginAdmin" action="/login" class="user" method="post">

                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <input type="text" name="userid" class="form-control form-control-user" id="txtEmail"
                                            placeholder="UserID" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <input type="password" name="password" class="form-control form-control-user" id="txtPWD"
                                            placeholder="Password" required>

                                    </div>
                                </div>

                                <button type="submit" id="btnsubmit" class="btn btn-user btn-block" style="background: var(--gradient-blue); color: white; font-size: small ">Login
                                </button>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>